<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>

        </div>
         <div class="row">
            <a href="/admin/allOrders" class="btn btn-success ml-auto" style="    margin-right: 9rem; margin-top: -38px;">All Orders</a>
            
        </div>
          <div class="row">
            <a href="/admin/allUsers" class="btn btn-success ml-auto" style="     margin-right: 17rem; margin-top: -37px;   ">All Users</a>
            
        </div>
 <table class="table mt-5 " id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 50px; height:50px;"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"onclick="return confirm('are you want to delete {{this.Name}}?')">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
